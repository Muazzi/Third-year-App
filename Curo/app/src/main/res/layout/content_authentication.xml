<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.muaz1.curo.Authentication"
    tools:showIn="@layout/activity_authentication">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:background="#FFFFFF"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">

        <Button
            android:id="@+id/btnSignup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="63dp"
            android:layout_marginTop="68dp"
            android:background="#009688"
            android:text="SignUp"
            android:textColor="#FFFFFF"
            android:textAppearance="@style/TextAppearance.AppCompat.Button" />

        <Button
            android:id="@+id/btnLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/btnSignup"
            android:layout_alignBottom="@+id/btnSignup"
            android:layout_marginStart="57dp"
            android:layout_toEndOf="@+id/btnSignup"
            android:background="#009688"
            android:text="Login"
            android:textColor="#FFFFFF"
            android:textAppearance="@style/TextAppearance.AppCompat.Button" />

        <EditText
            android:id="@+id/edtUsername"
          style="@style/TextAppearance.AppCompat.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="33dp"
            android:ems="10"
            android:hint="Enter your Username:"
            android:inputType="textPersonName"
            android:textColor="#000000"
            android:textColorHint="#000000"
            android:layout_below="@+id/edtEmailAdress"
            android:layout_alignStart="@+id/edtEmailAdress" />
        <EditText
            android:id="@+id/edtEmailAdress"
            style="@style/TextAppearance.AppCompat.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/btnSignup"
            android:layout_below="@+id/btnSignup"
            android:layout_marginTop="95dp"
            android:ems="10"
            android:hint="Enter your Email:"
            android:inputType="textEmailAddress"
            android:textColor="#000000"
            android:textColorHint="#000000"
            />
        <EditText
            android:id="@+id/edtPassword"
            style="@style/TextAppearance.AppCompat.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/btnSignup"
            android:layout_below="@+id/edtEmailAdress"
            android:layout_marginTop="95dp"
            android:ems="10"
            android:hint="Enter your Password:"

            android:inputType="textPassword"
            android:textColor="#000000"
            android:textColorHint="#FFFFFF"
            />




    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
